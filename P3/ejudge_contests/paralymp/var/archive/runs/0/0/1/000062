#include "iostream"
#include "vector"
#include "string"
#include "stdio.h"
#include "algorithm"
#include "math.h"
using namespace std;


int main()
{
	//freopen("input.txt","r",stdin);
	//freopen("output.txt","w",stdout);
	string s;
    getline(cin,s);
    int ans=0;
    while(s.size()!=1){
        bool check=true;
        int i=0; int j=s.size()-1;
        while(i<j){
            if(!(s[i]==s[j]))
                check=false;
            i++; j--;
        }
        if(check==true)
                ans++;
        if(s.size() % 2==1)
            s.erase(s.size() / 2+1,s.size());
        else
            s.erase(s.size() / 2,s.size());
    }
    cout<<ans;
	return 0;
}