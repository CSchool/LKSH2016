#include<iostream>

using namespace std;

int main()
{   
    int a,b,c,m[1000],d=0;
    cin >> a >> b;
    c=a;
    if (a==0) {
        cout << 0;
        return 0;
    }
    while (c>0){
        d++;
        m[d]=c%7;
        c=c/7;
    }
    for (int i=d;i>=1;i--)
        cout << m[i];
 //   system("pause");
    return 0;
}