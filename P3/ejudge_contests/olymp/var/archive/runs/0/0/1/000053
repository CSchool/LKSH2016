#include <iostream>
#include <vector>

using namespace std;

struct os {
	int f, l;
};

int main() {

	int n, k;
	cin >> n >> k;

	vector<os> s;

	for (int i = 0; i < k; i++) {
		int a, b;
		os o;
		cin >> a >> b;
		o.f = a; o.l = b;
		s.push_back(o);
		vector<int> del;
		for (int j = 0; j < s.size()-1; j++) {
			if (s[i].f <= s[j].l && s[i].l >= s[j].f)
				del.push_back(j);
		}
		for (int j = del.size()-1; j >= 0; j--) {
			s.erase(s.begin() + del[j]);
		}
	}

	cout << s.size();
	
	//system("pause");
	return 0;
}