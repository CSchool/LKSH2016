#include <iostream>
#include <cstdio>
#include <vector>

using namespace std;

struct Mass{
    int A = 0;
    int B = 0;
    int S = 0;
};

int main()
{
    int M, N;
    cin >> M >> N;
    vector <int> Real(M);
    int score = 0;
    vector <Mass> m(N);
    for (int i = 0; i < N; i++)
    {
        cin >> m[i].A >> m[i].B;
    }
    for (int i = 0; i < N; i++)
    {
        for (int j = m[i].A; j <= m[i].B; j++)
        {
            Real[j]++;
        }
    }
    for (int i = 0; i < N; i++)
    {
        for (int j = m[i].A; j <= m[i].B; j++)
        {
            if(Real[j] == 1)
            {
                m[i].S = 0;
            }
            if(Real[j] > 1)
            {
                m[i].S = 1;
            }
        }
    }
    for (int i = 0; i < N; i++)
    {
        if(m[i].S == 0)
        {
            score++;
        }
    }
    cout << score << endl;
    return 0;
}