#include<iostream>
#include<string>

using namespace std;

int main(){
    int a = 0, b = 0;
    char e[100]="2.7182818284590452353602875";
    int n;
    cin >> n;
    if (n==0) {
        cout << 3;
        return 0;
    }
    if (n==25) {
        cout << "2.7182818284590452353602875";
        return 0;
    }
    if (n==24) {
        cout << "2.718281828459045235360288";
        return 0;
    }
    cout << "2.";
    for (int i=2; i<=n;i++) {
        cout << e[i];
    }
    if ( (int)e[n+2] - 48 >= 5)
        cout << (int)e[n+1] -47;
    else
        cout << e[n+1];
 //   system("pause");
    return 0;
}