#include "string"
#include "stdio.h"
#include "algorithm"
#include "math.h"
using namespace std;


int main()
{
	//freopen("input.txt","r",stdin);
	//freopen("output.txt","w",stdout);
	int n;
    cin >> n;
    int kek = 8;
    for (int i = 1; i < n; i++){
        kek *= 2; 
    }
    cout<<kek;
	return 0;
}