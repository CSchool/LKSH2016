// zadacha.cpp: определяет точку входа для консольного приложения.
//

#include "iostream"
#include "vector"
#include "string"
#include "stdio.h"
#include "algorithm"
#include "math.h"
using namespace std;

struct str{
	int time;
	int price;
	int size;
};

bool cmp(const str&s1, const str&s2){
	return s1.time<s2.time;
}


int main()
{
	//freopen("input.txt","r",stdin);
	//freopen("output.txt","w",stdout);
	int n, z, t;
	cin >> n >> z >> t;
	vector<str> band(n);
	vector<int> sum(n);
	for (int i=0; i < n; i++)
		cin >> band[i].time;
	for (int i = 0; i < n;i++)
		cin>> band[i].price;
	for (int i = 0; i < n; i++)
		cin >> band[i].size;
	sort (band.begin(), band.end(), cmp);
	int max = 0;
	for (int i = n-1; i >= 0; i--){
		max=0; 
		if(band[i].size < band[i].time && band[i].time <= t)
			sum[i] = band[i].price;
		for(int k = i+1; k<n; k++){
			if(sum[k] > max && abs(band[i].time - band[k].time) >= abs(band[i].size - band[k].size)){
				max = sum[k];
				sum[i] = max + band[i].price;
			}
		}
	}
	for(int i = 0; i < sum.size(); i++){
		if(sum[i] > max) max = sum[i];
	} 
	cout << max;
	return 0;
}

