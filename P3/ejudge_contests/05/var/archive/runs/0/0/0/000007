#include <iostream>
//#include <conio.h>
#include <vector>

using namespace std;

vector<int> k;

int main() {
	int n, s = 0;

	cin >> n;

	k.resize(n);

	k[0] = 1;

	for (int i = 1; i < n; i++) {
		int a, b;
		a = i - 1 >= 0 ? k[i - 1] : 0;
		b = (i + 1) % 2 == 0 ? (i + 1) / 2 > 0 ? k[i / 2] : 0 : 0;
		k[i] = a + b;
	}

	k[0] = 0;

	cout << k[n - 1];

	//_getch();
	return 0;
}