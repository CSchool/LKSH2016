// zadacha.cpp: определяет точку входа для консольного приложения.
//

#include "iostream"
#include "vector"
#include "string"
#include "stdio.h"
#include "algorithm"
#include "math.h"
using namespace std;

int main()
{
	//freopen("input.txt","r",stdin);
	//freopen("output.txt","w",stdout);
	vector<int> table(34);
	string s;
	getline(cin,s);
	for(int i=0;i<34;i++){
		table[i]=i;
	}
	int ans=0;
	bool kek=true;
	for(int i=0;i<s.size();i++){
		if(kek==false)
			continue;
		kek=true;
		int first,second,third;
		for(int j=0;j<35;j++){
			if(((int)(s[i])-48)==table[j]){
				ans++;
				break;
			}
			if(((int)(s[i])-48)==table[j] && ((int)(s[i+1])-48)==table[j+1]){
				ans++;
				kek=false;
				break;
			}
		}
	}
	cout<<ans;
	return 0;
}

