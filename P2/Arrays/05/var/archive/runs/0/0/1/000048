#include <iostream>
#include <cmath>
using namespace std;
int main(){
	int n,v,b;
	v=b=0;
	int x=0;
	int g=0;
	int a[100][100];
	cin >> n;
	for(int i=0; i<n; ++i)
		for(int j=0; j<n; ++j)
	{
		cin >> a[i][j];
	}
	for(int i=0; i<n; ++i)
		for(int j=i+1; j<n; ++j)
	{
		if(a[i][j]%2==0){g++;}
	}
	
	cout << g<< endl;
	
	
	
	return 0;
}