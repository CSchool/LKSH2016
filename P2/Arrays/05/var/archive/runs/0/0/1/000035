# include <iostream>
using namespace std;

int main() {

	int n;

	cin >> n;

	int a[100];

	for (int i = 0; i < n; i++)
		cin >> a[i];

	int x = 0;
	int max = a[0];
	int min = a[0];
	int y = 0;
	int z = 0;

	for (int i = 1; i < n; i++)
		if (a[i]> max) {
			max = a[i]; x = i;
		}

	for (int i = 1; i < n; i++)
		if ((a[i] < min) && (a[i]>0)) {
			min = a[i]; y = i;
		}

	if (y > x) {

		for (int i = y; i < x; i++)
			z = z + 1;
	}
	if (x < y) {
		for (int i = y; i < x; i--)
			z = z + 1;
	}
	cout << z << endl;

	return 0;
}