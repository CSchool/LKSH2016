#include<iostream>
#include<string>
using namespace std;
string s;

int main(){
	int f = 0;
	getline(cin, s);
	for (int i =0; i < s.length(); ++i) {
		if (s[i] == 'Z')
	f = f + 1;
	}
	cout << f << endl;
	return 0;
}

























































































































































































































	
	
	
	
	
	
	
	
	
	




