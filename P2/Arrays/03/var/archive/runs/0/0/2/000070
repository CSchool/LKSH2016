#include <iostream>

using namespace std;

int main()
{
	int a[100];
	int b , k , l;
	int m[100];
	int c = 0;
	int r = 0;
	cin >> b ;
	for( int i = 0 ; i < b ; ++i )
	{
		cin >> a[i];
		m[r] = a[i];
		if( c <= a[r])
		{
			c = a[r];
			l = r ;
		}
		++r ;
	}
	cout << l ;
	return 0;
}

	